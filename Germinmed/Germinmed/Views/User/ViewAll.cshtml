@model IEnumerable<Germinmed.Models.Users>

@{
    Layout = null;
}
<div class="datatable-wide">
    <table class="table table-hover" id="userTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        
                        @{ if (item.UserTypeId == 2)
                            {
                                @("Admin")
                            }
                            if (item.UserTypeId == 3)
                            {
                                @("Staff")
                            }
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","User",new {id=item.Id })');"><i class="fa fa-pencil fa-lg"></i></a>
                        <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","User",new {id=item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
