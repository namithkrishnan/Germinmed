@model IEnumerable<Germinmed.Models.Clients>
@{
    Layout = null;
}

<div class="datatable-wide">
    <table class="table table-hover" id="clientTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Url)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>
              
                <td>
                    <img src="@Url.Content(item.ImageUrl)" style="margin:10px" height="100" width="150" />

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>

                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Client",new {id=item.Id })');"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Client",new {id=item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>
