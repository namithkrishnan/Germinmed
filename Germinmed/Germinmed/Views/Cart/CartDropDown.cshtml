@using Germinmed.Models

@{
    Layout = null;
}
@{ if (Session["cart"] != null)
    {


        foreach (Cart item in (List<Cart>)Session["cart"])
        {
            <div class="product">
                <div class="img-p"><img src="@Url.Content(item.Product.ImageUrl)" width="80" height="80">
               <em></em>
                </div>
                <div class="prduct-info">
                    <div class="dropcart__product-info">
                        <div class="dropcart__product-name"><a href="product.html">@item.Product.ProductName</a></div>
                        <ul class="dropcart__product-options"><li>@*Color: Gray*@</li><li>@*Material: Aluminum*@</li></ul><div class="dropcart__product-price">@item.Quantity x @item.Product.Price</div>
                    </div>
                </div>
                <div class="cl">
                    <a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })">
                        <button type="button" class="dropcart__product-remove button-remove"><img src="~/Content/images/close.png" width="12" height="12"></button>
                    </a>
                </div>
                <div class="clearfix"></div>
                </div>

            }
        }
}
