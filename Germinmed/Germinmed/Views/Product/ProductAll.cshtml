@model IEnumerable<Germinmed.Models.ProductViewModel>

@{
    Layout = null;
}


@{
    int i = 2;
    foreach (var item in Model.GroupBy(x => x.Id).Select(y => y.First()).ToList())
    {

        <div class="col-md-2 wow fadeInUp" data-wow-delay="0.@(i)s">
            @*<a href="@Url.Action("Details","Product",new { Id=item.Id})">*@
            <a href='@Url.Content("~/Product/Details?id=@item.Id")'>
                <div class="product-box">
                    <div class="pro-image">
                        <img src=" @Url.Content(item.ImageUrl) " class="img-responsive" alt="">
                        @{
                            if (item.IsOffer)
                            {
                                <span>@(item.OfferPercentage)% OFF</span>
                            }
                        }
                    </div>
                    <h3 categoryId="@item.CategoryId">@item.ProductName</h3>
                </div>
            </a>
        </div>
        i++;
    }
    @*if(Model.Count()==0)
    {
        <div>No Products found.</div>
    }*@

}

