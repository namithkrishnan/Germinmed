
@{
    ViewBag.Title = "Verify Account";
    Layout = "~/Views/Shared/_MainSiteLayout.cshtml";
}
<section class="main login">

    <section class=" brands sec-1 ">
        <div class="container ">
            <div class="row">

                <aside class="col-lg-4 right ">
                    @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                    {
                    <div class="alert alert-success">
                        <strong>Success!</strong> Your Email has been verified. We will verify your account and get back to you soon.Thank you for your Time.
                    </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>Error!</strong> @ViewBag.Message
                        </div>
                    }

                </aside>
            </div>
        </div>
    </section>
</section>