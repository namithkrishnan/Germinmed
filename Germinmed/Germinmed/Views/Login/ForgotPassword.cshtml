@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_MainSiteLayout.cshtml";
}

<section class="main login reset-pswd">

    <section class=" brands sec-1 ">
        <div class="container  ">
            <div class="row ">
                <aside class=" col-sm-4  left ">
                    <div class="modal-header">
                        <div class="panel">
                            <h2>Reset Your Password</h2>
                            <p>Please enter your email </p>
                        </div>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm())
                        {
                        <form id="Login">
                            <hr />
                            <div class="text-success">
                                @ViewBag.Message
                            </div>
                            <div class="form-group">
                                
                                @Html.TextBox("EmailID", "", new { @class = "form-control",  type = "email", id = "inputEmail", placeholder = "Email Address" })

                                @*@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", id = "inputEmail", placeholder = "Email Address" } })*@
                               

                            </div>

                            <button type="submit" class="btn btn-primary">Continue</button>
                        </form>
                        }
                        </div>
                </aside>

            </div>
        </div>
    </section>
</section>

