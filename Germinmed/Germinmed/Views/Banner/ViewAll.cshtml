@model IEnumerable<Germinmed.Models.Banner>
@{
    Layout = null;
}

<div class="datatable-wide">
    <table class="table table-hover display" id="bannerTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>




                <th></th>
            </tr>
        </thead>
        <tbody>
            @{  int i = 1;}
            @foreach (var item in Model.OrderBy(x=>x.DisplayOrder))
            {
               
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    <img src="@Url.Content(item.ImageUrl)" style="margin:10px" height="100" width="150" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                </td>





                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Banner",new {id=item.Id })');"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Banner",new {id=item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
                i++;
            }
        </tbody>
    </table>
</div>
