@using Germinmed.Models;
@model IEnumerable<Germinmed.Models.Category>
@{
    /**/

    /**/

    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_MainSiteLayout.cshtml";
    if (Url.RequestContext.RouteData.Values["id"] == null)
    {
        Url.RequestContext.RouteData.Values["id"] = 1;
    }
}

<!-- new design   -->

<main id="divMain">
   
    <section class="banner products-banner"style="@((ViewBag.InnerBanner != null && ((InnerBanner)ViewBag.InnerBanner).ImageUrl != "/AppFiles/Images/Default.png") ? "background:url(" + Url.Content(((InnerBanner)ViewBag.InnerBanner).ImageUrl) + ") no-repeat;background-size: cover" : "background:url(/content/images/products-banner.jpg) no-repeat;background-size: cover" )">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="head-left">
                        <h1>Products</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="head-right">
                        <ul class="list-inline">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><span>/</span></li>
                            <li>Prodcuts</li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="products">
        <div class="container">
            <div class="row pad-tb-25">
                <div class="col-md-12">

                </div>

                <!-- Tab panes -->

                <div class="product-inner">
                    <div class="col-md-3">
                        <div class="sidebar sidebar-left zee">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h1> @Html.Action("GetCategoryNameByID")   </h1>
                        <div class="product-right">
                            <div class="breadcrub">
                                <ul class="list-inline">
                                    <li> Home</li>
                                    <li><span> / </span> </li>

                                    <li> <a class="bp" href="@Url.Action("Index","Product")"> Products</a></li>
                                    <li><span> / </span> </li>
                                    <li>@Html.Action("GetCategoryNameBreadcrumb")  </li>
                                </ul>
                            </div>
                            <div class="row">


                                @Html.Action("CategorySub", "Product")






                            </div>

                        </div>
                    </div>
                </div>



            </div>
        </div>



    </section>
</main>
<!--End New Desgin-->
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ScriptsClientSide.js"></script>


}



