@using Germinmed.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainSiteLayout.cshtml";
}

<main>
    <section class="banner products-banner">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="head-left">
                        <h1>Shopping Cart</h1>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="head-right">
                        <ul class="list-inline">
                            <li><a href="">Home</a></li>
                            <li><span>/</span></li>
                            <li>Shopping Cart</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="cart">
        <div class="container">
            <div class="row pad-tb-80">



                <form class="shop-form" action="#">
                    <div class="wishlist-table table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-remove"></th>
                                    <th class="product-cart-img">
                                        <span class="nobr">Product Image</span>
                                    </th>
                                    <th class="product-name">
                                        <span class="nobr">Product Name</span>
                                    </th>

                                    <th class="product-price" style="display:flex">
                                        <span class="nobr">quantity</span>
                                    </th>

                                    <th class="product-price">
                                        <span class="nobr"> Unit Price </span>
                                    </th>
                                    <th class="product-total-price">
                                        <span class="nobr"> Total Price </span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="cartTable">
                               
                                @{

                                    @Html.Action("Add", "Cart", new { id = Url.RequestContext.RouteData.Values["id"] })


                                }





                            </tbody>
                        </table>
                    </div>


                    <div class="text-right padding-top70">
                        <a class="msg_contacthd" href="@Url.Action("Index","Product")">Continue Shopping</a>
                        <a class="chk-out" href="@Url.Action("Checkout","Cart")">Checkout Now</a>
                    </div>
                </form>







            </div>
        </div>
    </section>
</main>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ScriptsClientSide.js"></script>

}

