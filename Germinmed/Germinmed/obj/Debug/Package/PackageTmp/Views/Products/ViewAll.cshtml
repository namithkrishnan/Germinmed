@model IEnumerable<Germinmed.Models.Products>
@{
    Layout = null;
}
<div class="box-body table-responsive no-padding">
    <table class="table table-hover " id="productTable"  style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CategoryTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsFeatured)
                </th>

                <th>
                </th>
                <th>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsFeatured)
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit","Products",new {id=item.Id })');EditImage('@Url.Action("ViewImagesByProduct","Products",new {id=item.Id })','#imageList');"><i class="fa fa-pencil fa-lg"></i></a>
                        <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete","Products",new {id=item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Details","Products", new { id = item.Id })"><i class="fa fa-info fa-lg"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
